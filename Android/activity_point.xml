<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointActivity">

    <ImageView
        android:id="@+id/login_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo"/>
    <TextView
        android:id="@+id/points_converter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points Converter"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_icon"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/ChildPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/points_converter"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/ChildPoints1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points"
        android:layout_toRightOf="@id/ChildPoints"
        android:layout_below="@id/points_converter"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/ClickPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_brightness_1_24"
        android:layout_below="@id/ChildPoints"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/ActualPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ClickPoint"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/ActualPoints1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zings"
        android:layout_toRightOf="@id/ActualPoints"
        android:layout_below="@id/ClickPoint"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/confirm_bug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ActualPoints1"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:padding="15dp"
        android:text="continue"
        android:textSize="22sp" />


</RelativeLayout>