<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="RegisterActivity">

    <ImageView
        android:id="@+id/register_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/register_first_name"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/hobbylogo"/>

    <EditText
        android:id="@+id/register_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/inputs"
        android:maxLines="1"
        android:cursorVisible="true"
        android:maxLength="16"
        android:hint="First Name"
        android:textCursorDrawable="@android:color/black"
        android:padding="5dp" />

    <EditText
        android:id="@+id/register_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_first_name"
        android:layout_centerHorizontal="true"
        android:cursorVisible="true"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:background="@drawable/inputs"
        android:maxLength="16"
        android:textCursorDrawable="@android:color/black"
        android:hint="Last Name"
        android:padding="5dp" />


    <Button
        android:id="@+id/register_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_last_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:padding="15dp"
        android:text="Continue"
        android:textSize="22sp" />









</RelativeLayout>