<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Rank_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_points"
        android:text="No.Rank"/>

    <LinearLayout
        android:id="@+id/Suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/Rank_no"
        android:layout_toRightOf="@id/Rank_no"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/Rank_Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@android:color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/Ranking_Points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:inputType="number"
        android:text="Points"
        android:textStyle="bold" />


</RelativeLayout>

