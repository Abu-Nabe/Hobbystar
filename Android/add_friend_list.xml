<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/FriendProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile" />


    <LinearLayout
        android:id="@+id/Interest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/FriendProfile"
        android:layout_toRightOf="@id/FriendProfile"
        android:orientation="vertical">

        <TextView
            android:id="@+id/FriendUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/FriendPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_dark_star"
            android:text="0" />


    </LinearLayout>

    <TextView
        android:id="@+id/Friend_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/inputs"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:text="Add Friend"
        android:textColor="#3CB371"
        android:textSize="10sp"
        android:padding="10dp"
        android:textStyle="bold" />






</RelativeLayout>