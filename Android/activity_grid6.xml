            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/turkey"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Turkmenistan"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="@drawable/turkmenistan"
            android:layout_toRightOf="@id/anime"/>

        <ImageView
            android:id="@+id/Tuvalu"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/tuvalu"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/Uganda"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/uganda"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/Ukraine"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ukraine"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/UnitedArabEmirates"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="@drawable/unitedarabemirates"
            android:layout_toRightOf="@id/anime"/>

        <ImageView
            android:id="@+id/UnitedKingdom"
            android:layout_width="70dp"
            android:layout_height="40dp"
