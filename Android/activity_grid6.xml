<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D3D3D3"
    tools:context="com.zinging.hobbystar.grid.GridActivity6">


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/StVincentGrenadines"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="@drawable/stvincentgrenadines"
            android:layout_toRightOf="@id/anime"/>

        <ImageView
            android:id="@+id/Sudan"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sudan"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/Suriname"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/suriname"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/Sweden"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sweden"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Switzerland"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="@drawable/switzerland"
            android:layout_toRightOf="@id/anime"/>

        <ImageView
            android:id="@+id/Syria"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/syria"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/Taiwan"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/taiwan"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/Tajikistan"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/tajikistan"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Tanzania"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="@drawable/tanzania"
            android:layout_toRightOf="@id/anime"/>

        <ImageView
            android:id="@+id/Thailand"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/thailand"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/TimorLeste"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/timorleste"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/Togo"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/togo"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
