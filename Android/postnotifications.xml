<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="150dp"
    android:layout_height="wrap_content" android:paddingLeft="2dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/NotifPost"
        android:scaleType="centerCrop"
        android:paddingLeft="2dp"
        android:layout_below="@id/notification_username"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/notification_image"
        android:paddingLeft="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_username"
        android:text="Username"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/notification_image"
        android:textColor="@android:color/black"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_event"
        android:text="Recent post!"
        android:layout_below="@id/NotifPost"
        android:paddingLeft="2dp"
        android:textSize="10sp"
        android:maxLines="5"/>

    <TextView
        android:id="@+id/notification_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/NotifPost"
        android:textSize="10sp"
        android:paddingRight="2dp"
        android:text="Date"/>

</RelativeLayout>