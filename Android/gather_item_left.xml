<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gather_show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Hello"
        android:textColor="@android:color/white"
        android:layout_below="@id/gather_username"
        android:background="@drawable/background_left"
        android:padding="8dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gather_username"
        android:text="username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/gather_show_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gather_show_message"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gather_text_seen"
        android:text="you got left on seen"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>